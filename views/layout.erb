<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- META TAGS -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Kevin McLoughlin">
    <meta name="description" content="A simple, yet minimal, CRM app.">

    <!-- TITLE -->
    <title><%= @page_title %></title>

    <!--
    ===========
    STYLESHEETS
    ===========
    -->

    <!-- BOOTSTRAP STYLES -->
    <link rel="stylesheet" href="/bootstrap.min.css">

    <!-- OTHER STYLES -->
    <link rel="stylesheet" href="/css/animate.min.css" />

    <!-- MAIN STYLES -->
    <link rel="stylesheet" href="/style.css">

    <!-- JAVASCRIPTS -->
    <script src="https://code.jquery.com/jquery-2.1.4.min.js" type="text/javascript"></script>
    <script src="/bootstrap.min.js" type="text/javascript"></script>
  </head>

  <body>
    <!--
    =================
    GLOBAL NAVIGATION
    =================
    -->

    <!-- NAVBAR -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button class="navbar-toggle" data-toggle="collapse" data-target="#nav-header-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">
            <img alt="Bowser's CRM Logo" src="/img/bowser-head.png">
            Bowser's Hit List
          </a>
        </div>

        <!-- COLLAPSIBLE NAV -->
        <div class="collapse navbar-collapse" id="nav-header-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/contacts">Contacts</a></li>
            <li><a href="/contacts/add">Add Contact</a></li>
            <li><a href="/contacts/edit">Edit Contact</a></li>
            <li><a href="/contacts/delete">Delete Contact</a></li>
          </ul>
        </div>
      </div>
      <header>
        <h1 class="page-title"><%= @page_h1 %></h1>

        <!-- MONSTER TEETH -->
        <div class="iphone-5-header-monster-teeth">
          <div class="arrow-down"></div>
          <div class="arrow-down"></div>
          <div class="arrow-down"></div>
          <div class="arrow-down"></div>
          <div class="arrow-down"></div>
          <div class="arrow-down"></div>
          <div class="arrow-down"></div>
        </div>
      </header>
    </nav>

    <content>

    <%= yield %>

    </content>

    <!--
    ====================
    BOTTOM MONSTER TEETH
    ====================
    -->
    <footer>

      <!-- BOTTOM MONSTER TEETH -->
      <section>
        <!-- DISPLAY ON iPHONE 6+ -->
        <!-- <div class="iphone-6-plus-footer-monster-teeth">
          <div class="arrow-up"></div>
          <div class="arrow-up"></div>
          <div class="arrow-up"></div>
          <div class="arrow-up"></div>
          <div class="arrow-up"></div>
          <div class="arrow-up"></div>
          <div class="arrow-up"></div>
          <div class="arrow-up"></div>
          <div class="arrow-up"></div>
        </div> -->
      </section>
      <section>
        <!-- DISPLAY ON iPHONE 5 -->
        <div class="iphone-5-footer-monster-teeth">
          <div class="arrow-up"></div>
          <div class="arrow-up"></div>
          <div class="arrow-up"></div>
          <div class="arrow-up"></div>
          <div class="arrow-up"></div>
          <div class="arrow-up"></div>
          <div class="arrow-up"></div>
        </div>
      </section>

      <!-- STICKY FOOTER -->
      <footer class="sticky-footer">
        <container>
          <p class="p-footer">&copy; 2015, Chainchomp Labs</p>
        </container>
      </footer>

    </footer>

  </body>
</html>